DATABASE_URL=postgresql://postgres:postgres@db:5432/daemonology

# OpenAI API Key (required for embeddings)
OPENAI_API_KEY=your_openai_key_here

# OpenRouter Configuration (for LLM queries)
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_key_here

# LLM Model to use via OpenRouter
# Examples: openai/gpt-3.5-turbo, openai/gpt-4, anthropic/claude-3-haiku, meta-llama/llama-3.1-8b-instruct
# See available models at: https://openrouter.ai/models
LLM_MODEL=openai/gpt-3.5-turbo

DATA_DIR=./data
INDEX_DIR=./indexes

# Embedding Model (if using OpenRouter, use format like: openai/text-embedding-3-small)
EMBEDDING_MODEL=text-embedding-3-small
